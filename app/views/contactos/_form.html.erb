<%= form_for(@contacto) do |f| %>
  <% if @contacto.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contacto.errors.count, "error") %> prohibited this contacto from being saved:</h2>

      <ul>
      <% @contacto.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nombre %><br />
    <%= f.text_field :nombre , :placeholder => 'Solo letras sin espacios', :pattern =>'^[A-Za-z]+$' %>
  </div>
  <div class="field">
    <%= f.label :apellido %><br />
    <%= f.text_field :apellido , :placeholder => 'Solo letras sin espacios' ,:pattern =>'^[A-Za-z]+$' %>
  </div>
  <div class="field">
    <%= f.label :age %><br />
    <%= f.text_field :age , :placeholder => 'Solo edades de 1-99' ,:pattern =>'^([1-9]|[1-9][0-9])$' %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email %>
  </div>
  <div class="field">
    <%= f.label :telefono %><br />
    <%= f.text_field :telefono , :placeholder => 'formato: 88888888' ,:pattern=>'\d{8}' %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
